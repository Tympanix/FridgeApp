
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/add_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:text="@string/add_item_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"/>

    <AutoCompleteTextView
        android:id="@+id/item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:text="@string/expires_after_opened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"/>

    <EditText
        android:id="@+id/expires_opened"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <View
        android:background="#555555"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true" />


    <Button
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_item_change_date_button"
        android:textSize="24sp" />


    <TextView
        android:text="@string/expires_after_opened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10">

        <Button android:text="@string/add_extra_item_button"
            android:layout_width="match_parent"
            android:id="@+id/add_item_add_button"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#ff7d7878"/>
    </LinearLayout>

</LinearLayout>
